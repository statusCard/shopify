  top: auto !important;
  bottom: 5% !important;
  z-index: 3 !important;
}

.pl--hero-14-product-image {
  height: auto !important;
  width: 100% !important;
}

/* Base styles */
.pl--hero-14-static-overlay-image {
  position: absolute !important;
  z-index: 2 !important;
  object-fit: cover !important;
}

/* Only show pointer if image is clickable */
.pl--hero-14-static-overlay-image.clickable {
  cursor: pointer !important;
  pointer-events: auto;
}

/* No pointer / disable clicks if no link */
.pl--hero-14-static-overlay-image.no-link {
  cursor: default !important;
  pointer-events: none !important;
}



