{%- style -%}
  /* ========================================= */
  /* PART 1: HERO STYLES (From Smoke Smarter)  */
  /* ========================================= */

  /* Hero Image Transforms (Desktop) */
  #Hero-{{ section.id }} .hero-image img {
    transform: 
      translate({{ section.settings.image_x_desktop }}px, {{ section.settings.image_y_desktop }}px) 
      rotate({{ section.settings.image_rotate_desktop }}deg) 
      scale({{ section.settings.image_scale_desktop }});
    transition: transform 0.3s ease-out;
  }

  /* Stroke Image Transforms (Desktop) */
  #Hero-{{ section.id }} .hero-stroke {
    opacity: {{ section.settings.stroke_opacity }};
    transform: 
      translateX(-50%) /* Center alignment base */
      translate({{ section.settings.stroke_x_desktop }}px, {{ section.settings.stroke_y_desktop }}px) 
      rotate({{ section.settings.stroke_rotate_desktop }}deg) 
      scale({{ section.settings.stroke_scale_desktop }});
  }

  /* Block Specific Logic */
  {% for block in section.blocks %}
    {% if block.type == 'title' or block.type == 'description' or block.type == 'stats' %}
      .block-{{ block.id }} {
        font-family: {{ block.settings.font_family }};
        font-weight: {{ block.settings.font_weight }};
        font-style: {{ block.settings.font_style }};
        
        {% case block.type %}
          {% when 'title' %}
            font-size: {{ block.settings.font_size }}px !important;
            margin-bottom: {{ block.settings.margin_bottom }}px !important;
          {% when 'description' %}
            font-size: {{ block.settings.font_size }}px !important;
            margin-bottom: {{ block.settings.margin_bottom }}px !important;
          {% when 'stats' %}
             transform: 
               translate({{ block.settings.stat_pos_x_desktop }}px, {{ block.settings.stat_pos_y_desktop }}px) 
               rotate({{ block.settings.stat_rotation }}deg) 
               scale({{ block.settings.stat_scale }});
        {% endcase %}
      }

      {% if block.type == 'stats' %}
        .block-{{ block.id }} .stat-number {
          font-size: {{ block.settings.number_font_size }}px !important;
          margin-bottom: {{ block.settings.number_margin_bottom }}px !important;
        }
        .block-{{ block.id }} .stat-description {
          font-size: {{ block.settings.description_font_size }}px !important;
        }
      {% endif %}

      /* Mobile Block Styles */
      @media (max-width: 768px) {
        {% case block.type %}
          {% when 'title' %}
            .block-{{ block.id }} {
              font-size: {{ block.settings.font_size_mobile }}px !important;
              margin-bottom: {{ block.settings.margin_bottom_mobile }}px !important;
            }
          {% when 'description' %}
            .block-{{ block.id }} {
              font-size: {{ block.settings.font_size_mobile }}px !important;
              margin-bottom: {{ block.settings.margin_bottom_mobile }}px !important;
            }
          {% when 'stats' %}
            .block-{{ block.id }} {
              transform: 
                translate({{ block.settings.stat_pos_x_mobile }}px, {{ block.settings.stat_pos_y_mobile }}px) 
                rotate({{ block.settings.stat_rotation }}deg) 
                scale({{ block.settings.stat_scale }});
            }
            .block-{{ block.id }} .stat-number {
              font-size: {{ block.settings.number_font_size_mobile }}px !important;
              margin-bottom: {{ block.settings.number_margin_bottom_mobile }}px !important;
            }
            .block-{{ block.id }} .stat-description {
              font-size: {{ block.settings.description_font_size_mobile }}px !important;
            }
        {% endcase %}
      }
    {% endif %}
  {% endfor %}

  /* Mobile Image Transforms */
  @media (max-width: 768px) {
    #Hero-{{ section.id }} .hero-image img {
      transform: 
        translate({{ section.settings.image_x_mobile }}px, {{ section.settings.image_y_mobile }}px) 
        rotate({{ section.settings.image_rotate_mobile }}deg) 
        scale({{ section.settings.image_scale_mobile }});
    }
    #Hero-{{ section.id }} .hero-stroke {
      transform: 
        translateX(-50%) 
        translate({{ section.settings.stroke_x_mobile }}px, {{ section.settings.stroke_y_mobile }}px) 
        rotate({{ section.settings.stroke_rotate_mobile }}deg) 
        scale({{ section.settings.stroke_scale_mobile }});
    }
  }

  /* Hero Layout CSS (Inlined for completeness) */
  .hero-smoke-smarter {
    position: relative;
    padding: {{ section.settings.padding_desktop | default: 60 }}px 20px 0 20px; /* Removed bottom padding to connect sections */
    background-color: {{ section.settings.background_color | default: '#f8f8f8' }};
    min-height: 500px;
    display: flex;
    flex-direction: column; /* Changed to column to stack elements */
    align-items: center;
    overflow: visible;
  }
  .hero-container {
    position: relative;
    z-index: 3; 
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    margin-bottom: 60px; /* Space between Hero and Promise */
  }
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  .hero-text {
    max-width: 500px;
    text-align: center;
  }
  .hero-title {
    font-weight: 900;
    line-height: 1.1;
    color: {{ section.settings.title_color | default: '#000000' }};
    text-transform: uppercase;
    letter-spacing: -0.02em;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    text-align: center;
  }
  .hero-description {
    line-height: 1.6;
    color: {{ section.settings.text_color | default: '#666666' }};
  }
  .hero-stats {
    text-align: center;
  }
  .glass-wrap {
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
    border-radius: 12px;
    border: 2px dashed rgba(0, 0, 0, 0.1);
    padding: 25px;
    box-shadow: 0 0 5px rgba(228, 226, 226, 0.0);
    margin: 20px auto;
  }
  .sticker-glass {
    display: inline-block;
    text-align: center;
    padding: 6px 14px;
    border-radius: 12px;
    margin-top: 6px;
    background: transparent;
  }
  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .hero-image img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
  .hero-stroke {
    position: absolute;
    top: 200px; 
    left: 50%;
    transform-origin: top center;
    z-index: 0;
    width: 120%;
    max-width: 1400px;
    pointer-events: none;
  }
  
  /* Hero Tablet */
  @media (max-width: 768px) {
    .hero-smoke-smarter {
      padding-top: {{ section.settings.padding_tablet | default: 20 }}px;
    }
    .hero-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    .hero-text { max-width: 100%; }
    .hero-stroke { top: 0; width: auto; height: 100%; }
  }

  /* Hero Mobile */
  @media (max-width: 480px) {
    .hero-smoke-smarter {
      min-height: auto;
      padding-top: {{ section.settings.padding_top_mobile | default: 5 }}px;
      padding-bottom: 0; /* Let Promise section handle bottom spacing */
    }
    .hero-title { line-height: 1.2; height: auto; display: block; }
    .hero-stroke {
      position: absolute;
      top: -75%;          
      left: 50%;
      width: 190%;        
      height: 190%;       
      max-width: none;
      transform-origin: center center;
      z-index: 0;
      display: block;
    }
    .hero-content { position: relative; z-index: 3; gap: 20px; }
    .glass-wrap.description-glass { background: rgba(255, 255, 255, 0.05); }
    .sticker-glass { background: rgba(255, 255, 255, 0.02); }
  }

  /* ========================================= */
  /* PART 2: PROMISE STYLES (From Collumherb)  */
  /* ========================================= */
  
  /* Font Loading */
  {{ section.settings.promise_title_font | font_face: font_display: 'swap' }}
  {{ section.settings.promise_headline_font | font_face: font_display: 'swap' }}
  {{ section.settings.promise_text_font | font_face: font_display: 'swap' }}

  #spro-promise-{{ section.id }}.spro-promise-wrap {
    /* Background is handled by parent hero-smoke-smarter now */
    background: transparent;
    position: relative;
    z-index: 2;
    width: 100%;
  }

  #spro-promise-{{ section.id }} .spro-promise-container {
    max-width: {{ section.settings.promise_max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.promise_padding_top }}px {{ section.settings.promise_padding_right }}px {{ section.settings.promise_padding_bottom }}px {{ section.settings.promise_padding_left }}px;
    text-align: center;
  }

  #spro-promise-{{ section.id }} .spro-promise-title {
    font-family: {{ section.settings.promise_title_font.family }}, {{ section.settings.promise_title_font.fallback_families }};
    font-weight: {{ section.settings.promise_title_font.weight }};
    font-style: {{ section.settings.promise_title_font.style }};
    font-size: {{ section.settings.promise_title_size }}px;
    color: {{ section.settings.promise_title_color }};
    text-transform: uppercase;
    letter-spacing: {{ section.settings.promise_title_letter_spacing }}px;
    margin: 0 0 {{ section.settings.promise_title_spacing }}px 0;
    line-height: 1.2;
  }

  #spro-promise-{{ section.id }} .spro-promise-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ section.settings.promise_column_gap }}px;
    max-width: {{ section.settings.promise_grid_max_width }}px;
    margin: 0 auto;
  }

  #spro-promise-{{ section.id }} .spro-promise-item {
    text-align: center;
    padding: {{ section.settings.promise_item_padding }}px;
    transition: all 0.3s ease;
  }
  
  {% if section.settings.promise_enable_animations %}
  #spro-promise-{{ section.id }} .spro-promise-item:hover {
    transform: translateY(-5px);
  }
  {% endif %}

  /* Promise Pill Styles */
  #spro-promise-{{ section.id }} .promise-pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.35rem 1rem;
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.10);
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    font-family: {{ section.settings.promise_headline_font.family }}, {{ section.settings.promise_headline_font.fallback_families }};
    font-weight: {{ section.settings.promise_headline_font.weight }};
    font-style: {{ section.settings.promise_headline_font.style }};
    font-size: {{ section.settings.promise_headline_size }}px;
    letter-spacing: {{ section.settings.promise_headline_letter_spacing }}px;
    color: {{ section.settings.promise_headline_color }};
    text-transform: uppercase;
    margin: 0 auto {{ section.settings.promise_headline_spacing }}px auto;
    width: max-content;
    gap: 10px;
  }

  #spro-promise-{{ section.id }} .promise-pill img {
    width: {{ section.settings.promise_icon_size | divided_by: 1.6 }}px;
    height: {{ section.settings.promise_icon_size | divided_by: 1.6 }}px;
    object-fit: contain;
    filter: {{ section.settings.promise_icon_filter }};
    transition: all 0.3s ease;
  }

  #spro-promise-{{ section.id }} .promise-pill:hover img {
    transform: scale({{ section.settings.promise_icon_hover_scale }});
    filter: {{ section.settings.promise_icon_hover_filter }};
  }

  #spro-promise-{{ section.id }} .spro-promise-item p {
    font-family: {{ section.settings.promise_text_font.family }}, {{ section.settings.promise_text_font.fallback_families }};
    font-weight: {{ section.settings.promise_text_font.weight }};
    font-style: {{ section.settings.promise_text_font.style }};
    font-size: {{ section.settings.promise_text_size }}px;
    color: {{ section.settings.promise_text_color }};
    line-height: {{ section.settings.promise_text_line_height }};
    max-width: {{ section.settings.promise_text_max_width }}px;
    margin: 0 auto;
  }

  /* Promise Mobile Optimization */
  @media (max-width: 768px) {
    #spro-promise-{{ section.id }} .spro-promise-container {
      padding-left: 5px;
      padding-right: 5px;
    }
    #spro-promise-{{ section.id }} .spro-promise-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 6px; 
    }
    #spro-promise-{{ section.id }} .spro-promise-item {
      padding: 0;
    }
    #spro-promise-{{ section.id }} .promise-pill {
      width: 100%;
      box-sizing: border-box;
      padding: 4px 2px;
      gap: 4px;
      font-size: 9px !important;
      line-height: 1.1;
      white-space: normal;
    }
    #spro-promise-{{ section.id }} .promise-pill img {
      width: 16px !important;
      height: 16px !important;
      min-width: 16px;
    }
    #spro-promise-{{ section.id }} .spro-promise-item p {
      font-size: 10px !important;
      line-height: 1.3;
      margin-top: 8px;
    }
  }
{%- endstyle -%}

<section id="Hero-{{ section.id }}" class="hero-smoke-smarter">
  {% if section.settings.stroke_image != blank %}
    {{ section.settings.stroke_image | image_url: width: 1400 | image_tag: class: 'hero-stroke', loading: 'lazy', alt: 'Decorative stroke' }}
  {% endif %}

  <div class="hero-container">
    <div class="hero-content">
      
      <div class="hero-text">
        {% for block in section.blocks %}
          {% if block.type == 'title' or block.type == 'description' or block.type == 'stats' %}
            {% case block.type %}
              {% when 'title' %}
                <h1 class="hero-title block-{{ block.id }}">
                  {{ block.settings.text | default: "SMOKE SMARTER SPEND LESS." }}
                </h1>

              {% when 'description' %}
                <div class="glass-wrap glow-pulse description-glass">
                  <p class="hero-description block-{{ block.id }}">
                    {{ block.settings.text | default: "The average smoker spends over $4,000 a year..." }}
                  </p>
                </div>

              {% when 'stats' %}
                <div class="hero-stats glow-pulse sticker-glass block-{{ block.id }}">
                  <div class="stat-number" style="line-height: 1.1;">
                    {{ block.settings.number | default: "1.97" }}
                  </div>
                  <div class="stat-description" style="line-height: 1.2;">
                    {{ block.settings.description | default: "Ounces With Us." }}
                  </div>
                </div>

            {% endcase %}
          {% endif %}
        {% endfor %}
      </div>

      <div class="hero-image">
        {% if section.settings.hero_image %}
          <img src="{{ section.settings.hero_image | image_url: width: 800 }}" 
               alt="{{ section.settings.hero_image.alt | default: 'Product showcase' }}"
               loading="lazy">
        {% else %}
          <div class="placeholder-image">
            <svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="400" height="300" fill="#f5f5f5"/>
              <circle cx="100" cy="150" r="60" fill="#d4af37" opacity="0.8"/>
              <circle cx="150" cy="150" r="60" fill="#cd5c5c" opacity="0.8"/>
              <circle cx="200" cy="150" r="60" fill="#708090" opacity="0.8"/>
              <circle cx="250" cy="150" r="60" fill="#dda0dd" opacity="0.8"/>
              <rect x="300" y="75" width="80" height="150" fill="#333" opacity="0.6"/>
              <text x="200" y="280" text-anchor="middle" fill="#999" font-size="14">Product Image Placeholder</text>
            </svg>
          </div>
        {% endif %}
      </div>

    </div>
  </div>

  <div id="spro-promise-{{ section.id }}" class="spro-promise-wrap">
    <div class="spro-promise-container">

      {% if section.settings.promise_section_title != blank %}
        <h2 class="spro-promise-title">{{ section.settings.promise_section_title }}</h2>
      {% endif %}

      <div class="spro-promise-grid">
        {% for block in section.blocks %}
          {% if block.type == 'promise_item' %}
            <div class="spro-promise-item">

              {% if block.settings.headline %}
                <div class="promise-pill">
                  {% if block.settings.icon %}
                    <img src="{{ block.settings.icon | image_url: width: 200 }}" alt="{{ block.settings.headline }}">
                  {% endif %}
                  <span>{{ block.settings.headline }}</span>
                </div>
              {% endif %}

              {% if block.settings.text %}
                 <p>{{ block.settings.text }}</p>
              {% endif %}

            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>

</section>

