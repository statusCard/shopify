{%- style -%}
  /* LOAD FONTS */
  {{ section.settings.font_eyebrow | font_face: font_display: 'swap' }}
  {{ section.settings.font_title | font_face: font_display: 'swap' }}
  {{ section.settings.font_body | font_face: font_display: 'swap' }}
  {{ section.settings.font_quote | font_face: font_display: 'swap' }}
  {{ section.settings.font_author | font_face: font_display: 'swap' }}
  {{ section.settings.font_btn | font_face: font_display: 'swap' }}
  {{ section.settings.font_badge_top | font_face: font_display: 'swap' }}
  {{ section.settings.font_badge_main | font_face: font_display: 'swap' }}
{%- endstyle -%}

<div class="human-element-wrapper" data-section-id="{{ section.id }}">
  
  <div class="human-element-container">
    <div class="human-grid {% if section.settings.layout_flip %}human-grid--flipped{% endif %}">
      
      <div class="human-content">
        <div class="human-content-inner">
          
          {%- if section.settings.eyebrow != blank -%}
            <div class="human-eyebrow animate-on-scroll">
              {{ section.settings.eyebrow }}
              <span class="eyebrow-line"></span>
            </div>
          {%- endif -%}

          {%- if section.settings.title != blank -%}
            <h2 class="human-title animate-on-scroll" style="--delay: 0.1s;">
              {{ section.settings.title | newline_to_br }}
            </h2>
          {%- endif -%}

          <div class="human-body animate-on-scroll" style="--delay: 0.2s;">
            {{ section.settings.body }}
          </div>

          {%- if section.settings.quote != blank -%}
            <div class="human-quote animate-on-scroll" style="--delay: 0.3s;">
              <blockquote>
                "{{ section.settings.quote }}"
              </blockquote>
              {%- if section.settings.quote_author != blank -%}
                <cite>â€” {{ section.settings.quote_author }}</cite>
              {%- endif -%}
            </div>
          {%- endif -%}

          <div class="human-footer-row animate-on-scroll" style="--delay: 0.4s;">
            {%- if section.settings.show_signature and section.settings.signature_image != blank -%}
              <div class="human-signature">
                {{ section.settings.signature_image | image_url: width: 300 | image_tag: loading: 'lazy', alt: section.settings.quote_author }}
              </div>
            {%- endif -%}

            {%- if section.settings.cta_text != blank -%}
              <div class="human-cta-wrapper">
                <a href="{{ section.settings.cta_url }}" class="human-btn">
                  {{ section.settings.cta_text }}
                  <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M1 11L11 1M11 1H3M11 1V9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </a>
              </div>
            {%- endif -%}
          </div>
          
        </div>
      </div>

      <div class="human-visual animate-on-scroll">
        <div class="human-card">
          {%- if section.settings.main_image != blank -%}
            {{ section.settings.main_image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'human-img', sizes: '(min-width: 768px) 50vw, 100vw' }}
          {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'human-img placeholder-svg' }}
          {%- endif -%}

          {%- if section.settings.show_badge -%}
            <div class="human-badge human-badge--standard">
              <span class="badge-text">{{ section.settings.badge_text }}</span>
              <span class="badge-icon">{{ section.settings.badge_subtext | newline_to_br }}</span>
            </div>
          {%- endif -%}
          
          <div class="hotspot-layer">
            <svg class="hotspot-line-svg">
              <line x1="0" y1="0" x2="0" y2="0" stroke="{{ section.settings.secret_border_color }}" stroke-width="1" stroke-linecap="round" />
            </svg>
            
            <div class="hotspot-dot">
              <div class="dot-center"></div>
              <div class="dot-pulse"></div>
            </div>
            
            <div class="human-badge hotspot-bubble">
              <span class="badge-text">{{ section.settings.secret_title }}</span>
              <span class="badge-icon">{{ section.settings.secret_body | newline_to_br }}</span>
            </div>
          </div>
          
          <div class="human-glint"></div>
        </div>
      </div>

    </div>
  </div>

  <button type="button" 
          class="easter-egg-btn" 
          aria-label="Secret"
          title="Identify Product">
     
     {% if section.settings.trigger_image_static != blank %}
        {{ section.settings.trigger_image_static | image_url: width: 100 | image_tag: class: 'egg-icon egg-static', loading: 'lazy' }}
     {% else %}
        <img src="https://cdn.shopify.com/s/files/1/0697/1880/2532/files/egg.svg?v=1770432539" class="egg-icon egg-static" width="50" height="auto" alt="Trigger">
     {% endif %}

     {% if section.settings.trigger_image_active != blank %}
        {{ section.settings.trigger_image_active | image_url: width: 100 | image_tag: class: 'egg-icon egg-cracked', loading: 'lazy' }}
     {% else %}
        <img src="https://cdn.shopify.com/s/files/1/0697/1880/2532/files/egg-crack.svg?v=1770423160" class="egg-icon egg-cracked" width="50" height="auto" alt="Trigger Active">
     {% endif %}
  </button>

  <style>
    /* VARIABLES */
    .human-element-wrapper[data-section-id="{{ section.id }}"] {
      /* FONTS */
      --font-eyebrow: {{ section.settings.font_eyebrow.family }}, {{ section.settings.font_eyebrow.fallback_families }};
      --font-title: {{ section.settings.font_title.family }}, {{ section.settings.font_title.fallback_families }};
      --font-body: {{ section.settings.font_body.family }}, {{ section.settings.font_body.fallback_families }};
      --font-quote: {{ section.settings.font_quote.family }}, {{ section.settings.font_quote.fallback_families }};
      --font-author: {{ section.settings.font_author.family }}, {{ section.settings.font_author.fallback_families }};
      --font-btn: {{ section.settings.font_btn.family }}, {{ section.settings.font_btn.fallback_families }};
      --font-badge-top: {{ section.settings.font_badge_top.family }}, {{ section.settings.font_badge_top.fallback_families }};
      --font-badge-main: {{ section.settings.font_badge_main.family }}, {{ section.settings.font_badge_main.fallback_families }};
      
      /* COLORS */
      {% if section.settings.transparent_bg %}
        --bg-color: transparent;
      {% else %}
        --bg-color: {{ section.settings.bg_color }};
      {% endif %}
      --text-color: {{ section.settings.text_color }};
      --accent-color: {{ section.settings.accent_color }};
      --card-bg: {{ section.settings.card_bg | color_modify: 'alpha', section.settings.card_opacity }};
      
      /* SPACING */
      --spacing-top: {{ section.settings.padding_top }}px;
      --spacing-bottom: {{ section.settings.padding_bottom }}px;
      --spacing-top-mob: {{ section.settings.padding_top | divided_by: 2 }}px;
      --spacing-bottom-mob: {{ section.settings.padding_bottom | divided_by: 2 }}px;
      
      /* STANDARD BADGE VARIABLES (--b) */
      --b-bg: {{ section.settings.badge_bg }};
      --b-text: {{ section.settings.badge_text_color }};
      --b-border: {{ section.settings.badge_border_color }};
      --b-radius: {{ section.settings.badge_radius }}px;
      --b-width: {{ section.settings.badge_border_width }}px;
      --b-style: {{ section.settings.badge_border_style }};
      
      /* SECRET BADGE VARIABLES (--sb) */
      --sb-bg: {{ section.settings.secret_bg_color }};
      --sb-text: {{ section.settings.secret_text_color }};
      --sb-border: {{ section.settings.secret_border_color }};
      --sb-radius: {{ section.settings.secret_radius }}px;
      --sb-width: {{ section.settings.secret_border_width }}px;
      --sb-style: {{ section.settings.secret_border_style }};
      
      /* SHARED FONT SIZES */
      --b-font-size-label: {{ section.settings.badge_font_label }}px;
      --b-font-size-body: {{ section.settings.badge_font_body }}px;
      --b-scale: {{ section.settings.badge_scale | divided_by: 100.0 }};
      --b-scale-mob: {{ section.settings.badge_scale_mob | divided_by: 100.0 }};
      
      /* EASTER EGG BTN POS */
      --egg-pos-x: {{ section.settings.egg_x }}%;
      --egg-pos-y: {{ section.settings.egg_y }}px;
      --egg-opacity: {{ section.settings.egg_opacity | divided_by: 100.0 }};
      --egg-size: {{ section.settings.egg_width }}px;
      
      /* HOTSPOT POS (Dynamic via Schema) */
      --spot-x: {{ section.settings.hotspot_x }}%;
      --spot-y: {{ section.settings.hotspot_y }}%;
      --bubble-x: {{ section.settings.bubble_x }}%;
      --bubble-y: {{ section.settings.bubble_y }}%;

      background-color: var(--bg-color);
      color: var(--text-color);
      padding-top: var(--spacing-top);
      padding-bottom: var(--spacing-bottom);
      
      /* KEY LAYOUT SETTINGS */
      position: relative;
      width: 100vw;
      margin-left: calc(50% - 50vw);
      margin-right: calc(50% - 50vw);
      left: 50%;
      right: 50%;
      transform: translateX(-50%);
      overflow: visible; 
      
      transition: background-color 0.8s ease, color 0.8s ease;
    }

    @media screen and (max-width: 768px) {
      .human-element-wrapper[data-section-id="{{ section.id }}"] {
        padding-top: var(--spacing-top-mob);
        padding-bottom: var(--spacing-bottom-mob);
      }
    }

    /* CONTAINER */
    .human-element-container {
      max-width: {{ section.settings.container_width }}px;
      margin: 0 auto;
      padding: 0 2rem;
      position: relative;
      height: 100%;
      z-index: 2;
    }

    .human-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .human-grid--flipped {
      direction: rtl;
    }
    .human-grid--flipped > * {
      direction: ltr;
    }

    @media screen and (max-width: 900px) {
      .human-grid {
        grid-template-columns: 1fr;
        gap: 3rem;
        display: flex;
        flex-direction: column-reverse;
      }
      .human-grid--flipped {
        flex-direction: column-reverse;
      }
    }

    /* CONTENT STYLES */
    .human-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    .human-content-inner {
      width: 100%;
      max-width: 520px;
      margin: 0 auto 0 0; 
      transition: transform 0.5s ease;
    }
    
    .human-grid--flipped .human-content-inner {
      margin: 0 0 0 auto;
    }

    .human-eyebrow {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      font-family: var(--font-eyebrow);
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.15em;
      font-weight: 600;
      color: var(--accent-color);
      margin-top: 0;
      margin-bottom: 1rem;
      line-height: 1;
    }
    
    .eyebrow-line {
      height: 1px;
      width: 40px;
      background-color: var(--accent-color);
      display: block;
    }

    .human-title {
      font-family: var(--font-title);
      font-size: {{ section.settings.heading_size }}px;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      letter-spacing: -0.02em;
    }

    .human-body {
      font-family: var(--font-body);
      font-size: 1rem;
      line-height: 1.6;
      color: {{ section.settings.text_color | color_modify: 'alpha', 0.8 }};
      margin-bottom: 2rem;
    }
    .human-body p { margin-bottom: 1rem; }

    /* QUOTE */
    .human-quote {
      border-left: 2px solid var(--accent-color);
      padding-left: 1.5rem;
      margin: 2rem 0;
    }
    .human-quote blockquote {
      font-family: var(--font-quote);
      font-style: italic;
      font-size: 1.25rem;
      margin: 0 0 0.5rem 0;
      color: var(--text-color);
    }
    .human-quote cite {
      font-family: var(--font-author);
      font-size: 0.8rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      font-style: normal;
      opacity: 0.7;
    }

    /* FOOTER ROW (SIGNATURE + CTA) */
    .human-footer-row {
      display: flex;
      align-items: flex-end; /* Aligns bottoms even on a line */
      gap: 2.5rem; /* Space between items */
      margin-top: 1rem;
      flex-wrap: wrap;
    }

    .human-signature {
      margin-bottom: 0; /* Handled by row */
    }
    .human-signature img {
      height: {{ section.settings.sig_size }}px;
      width: auto;
      object-fit: contain;
      margin-bottom: 0; /* Remove bottom margin to align with btn */
      background: transparent;
      display: block;
    }

    /* BUTTON */
    .human-cta-wrapper { 
      margin-bottom: 0; 
      line-height: 0; 
    }
    .human-btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 24px;
      background: transparent;
      border: 1px solid var(--text-color);
      color: var(--text-color);
      text-decoration: none;
      font-family: var(--font-btn);
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    .human-btn::after {
      content: '';
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: var(--text-color);
      transform: translateY(100%);
      transition: transform 0.3s ease;
      z-index: -1;
    }
    .human-btn:hover {
      color: var(--bg-color);
      border-color: var(--text-color);
    }
    .human-btn:hover::after {
      transform: translateY(0);
    }

    /* VISUAL CARD */
    .human-visual {
        display: flex;
        flex-direction: column;
        padding-bottom: 20px;
    }

    .human-card {
      position: relative;
      width: 100%;
      height: 100%; 
      aspect-ratio: auto; 
      background: var(--card-bg);
      border-radius: {{ section.settings.border_radius }}px;
      /* CARD MASKING */
      overflow: hidden; 
      -webkit-mask-image: -webkit-radial-gradient(white, black);
      mask-image: radial-gradient(white, black);
      isolation: isolate;
      box-shadow: 0 20px 40px -10px rgba(0,0,0,0.05);
      transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), box-shadow 0.6s ease;
      z-index: 1;
    }

    .human-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 30px 60px -15px rgba(0,0,0,0.1);
    }

    .human-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
      filter: contrast(0.95) saturate(0.9);
      border-radius: {{ section.settings.border_radius }}px;
    }
    
    img.human-img { background: transparent; }

    .human-card:hover .human-img {
      transform: scale(1.03);
      filter: contrast(0.9) saturate(1);
    }

    /* BASE BADGE STRUCTURE */
    .human-badge {
      position: absolute;
      padding: 12px 16px;
      display: flex;
      flex-direction: column;
      gap: 4px;
      z-index: 2;
      transform-origin: bottom right;
      transform: scale(var(--b-scale));
    }

    /* Standard Badge (Corner) */
    .human-badge--standard {
      background: var(--b-bg);
      border-width: var(--b-width);
      border-style: var(--b-style);
      border-color: var(--b-border);
      border-radius: var(--b-radius);
      color: var(--b-text);
      bottom: 20px;
      right: 20px;
    }

    .badge-text {
      font-family: var(--font-badge-top);
      font-size: var(--b-font-size-label);
      text-transform: uppercase;
      letter-spacing: 0.1em;
      opacity: 0.8;
      color: inherit;
      line-height: 1;
    }

    .badge-icon {
      font-family: var(--font-badge-main);
      font-size: var(--b-font-size-body);
      line-height: 1.1;
      color: inherit;
    }

    /* GLINT EFFECT */
    .human-glint {
      position: absolute;
      top: 0; left: -100%;
      width: 50%;
      height: 100%;
      background: linear-gradient(to right, transparent, rgba(255,255,255,0.3), transparent);
      transform: skewX(-25deg);
      pointer-events: none;
      transition: left 0.5s;
      z-index: 5; 
    }

    .human-card:hover .human-glint {
      left: 200%;
      transition: left 0.8s ease-in-out;
    }
    
    /* =========================
       HOTSPOT / INFO BUBBLE
       ========================= */
       
    .hotspot-layer {
      position: absolute;
      top: 0; left: 0; width: 100%; height: 100%;
      pointer-events: none;
      /* Let clicks pass through layer unless hitting bubble */
      opacity: 0;
      transition: opacity 0.5s ease;
      z-index: 10;
    }
    
    /* When active (via JS toggling class on section) */
    .hotspot-mode-active .hotspot-layer {
      opacity: 1;
      pointer-events: auto;
    }
    
    /* The SVG Line */
    .hotspot-line-svg {
      position: absolute;
      top: 0; left: 0; width: 100%; height: 100%;
      z-index: 1;
      pointer-events: none;
    }
    
    /* The Pulsing Dot */
    .hotspot-dot {
      position: absolute;
      top: var(--spot-y);
      left: var(--spot-x);
      width: 0; height: 0; /* Center point */
      z-index: 5; /* FIX: Increased Z-Index to stay above line and bubble */
    }
    
    .dot-center {
      position: absolute;
      top: -4px;
      left: -4px;
      width: 8px; height: 8px;
      background: var(--sb-border); /* Matches Secret Border */
      border-radius: 50%;
    }
    
    .dot-pulse {
      position: absolute;
      top: -20px;
      left: -20px;
      width: 40px; height: 40px;
      border: 1px solid var(--sb-border);
      /* Matches Secret Border */
      border-radius: 50%;
      opacity: 0;
      animation: lowPulse 2.5s infinite ease-out;
    }
    
    @keyframes lowPulse {
      0% { transform: scale(0.2);
      opacity: 0.8; }
      100% { transform: scale(1.5); opacity: 0;
      }
    }
    
    /* The Bubble (Secret Badge) */
    .hotspot-bubble {
      position: absolute;
      top: var(--bubble-y);
      left: var(--bubble-x);
      transform: translate(-50%, -50%) scale(var(--b-scale));
      transform-origin: center center;
      z-index: 3;
      /* Secret Specific Styling */
      background: var(--sb-bg);
      border-width: var(--sb-width);
      border-style: var(--sb-style);
      border-color: var(--sb-border);
      border-radius: var(--sb-radius);
      color: var(--sb-text);
    }

    /* =========================
       TRIGGER BTN
       ========================= */
    .easter-egg-btn {
      position: absolute;
      bottom: var(--egg-pos-y);
      left: var(--egg-pos-x); 
      background: none;
      border: none;
      opacity: var(--egg-opacity);
      cursor: pointer;
      color: var(--text-color);
      z-index: 20;
      /* Highest z-index */
      padding: 0;
      width: var(--egg-size);
      height: auto;
    }
    
    .egg-icon {
      width: 100%;
      height: auto;
      display: block;
      transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    .egg-cracked {
      position: absolute;
      top: 0; left: 0; opacity: 0;
      transform: scale(0.9);
    }
    
    .egg-static { opacity: 1;
    }
    
    .easter-egg-btn:hover .egg-static {
      opacity: 0; transform: scale(0.9);
    }
    .easter-egg-btn:hover .egg-cracked {
      opacity: 1; transform: scale(1.1);
    }

    /* ANIMATION INIT */
    .animate-on-scroll {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1), transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
      transition-delay: var(--delay, 0s);
    }
    .animate-on-scroll.is-visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* MOBILE LAYOUT */
    @media screen and (max-width: 768px) {
      .human-title { font-size: {{ section.settings.heading_size | times: 0.7 }}px; }
      .human-card { aspect-ratio: 1/1; height: auto; } 
      .human-grid { align-items: flex-start; }
      
      .human-badge--standard {
        transform: scale(var(--b-scale-mob));
        right: 15px;
        bottom: 15px;
      }
      
      .hotspot-bubble {
        transform: translate(-50%, -50%) scale(var(--b-scale-mob));
      }

      .human-content-inner {
        text-align: center;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .human-eyebrow { justify-content: center; }
      .human-quote {
        border-left: none;
        border-top: 2px solid var(--accent-color);
        padding-left: 0;
        padding-top: 1.5rem;
      }
      
      /* Mobile Footer Alignment: Stack them back up */
      .human-footer-row {
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
      }
      .human-signature img { margin: 0 auto; }
      
      .easter-egg-btn { 
        display: block;
        transform: scale(0.8);
        left: 10px; 
      }
    }
  </style>

  <script>
    (function() {
      function initHumanSection(container) {
        const sectionId = "{{ section.id }}";
        const wrapper = container.querySelector(`.human-element-wrapper[data-section-id="${sectionId}"]`);
        if (!wrapper) return;

        // SCROLL OBSERVER
        const observer = new IntersectionObserver((entries, obs) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              obs.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });

        const isDesignMode = Shopify.designMode;
        wrapper.querySelectorAll('.animate-on-scroll').forEach(el => {
           if(isDesignMode) { el.classList.add('is-visible'); } 
          else { observer.observe(el); }
        });

        // HOTSPOT LOGIC
        const eggBtn = wrapper.querySelector('.easter-egg-btn');
        const card = wrapper.querySelector('.human-card');
        
        // Draw Line Function
        function drawLine() {
            const dot = wrapper.querySelector('.hotspot-dot');
            const bubble = wrapper.querySelector('.hotspot-bubble');
            const line = wrapper.querySelector('.hotspot-line-svg line');
            
            if(!dot || !bubble || !line) return;

            const cardRect = card.getBoundingClientRect();
            const dotRect = dot.getBoundingClientRect();
            const bubbleRect = bubble.getBoundingClientRect();

            // Calculate center points relative to the card container
            // For the 0x0 dot, left is the exact center
            const x1 = dotRect.left + (dotRect.width/2) - cardRect.left;
            const y1 = dotRect.top + (dotRect.height/2) - cardRect.top;
            
            const x2 = bubbleRect.left + (bubbleRect.width/2) - cardRect.left;
            const y2 = bubbleRect.top + (bubbleRect.height/2) - cardRect.top;
            
            line.setAttribute('x1', x1);
            line.setAttribute('y1', y1);
            line.setAttribute('x2', x2);
            line.setAttribute('y2', y2);
        }

